{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeDevCommand": "npm run dev",
		"beforeBuildCommand": "npm run build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist"
	},
	"package": {
		"productName": "Demucs Audio Separator",
		"version": "0.1.0"
	},
	"tauri": {
		"allowlist": {
			"all": false,
			"dialog": {
				"all": true,
				"open": true,
				"save": true
			},
			"fs": {
				"all": true,
				"scope": ["**"]
			},
			"shell": {
				"all": false,
				"open": true
			},
			"path": {
				"all": true
			}
		},
		"bundle": {
			"active": true,
			"identifier": "com.musicremover.app",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			]
		},
		"security": {
			"csp": null
		},
		"windows": [
			{
				"fullscreen": false,
				"resizable": true,
				"title": "Demucs Audio Separator",
				"width": 1200,
				"height": 900
			}
		]
	}
}
